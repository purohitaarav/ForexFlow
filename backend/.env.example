# Environment Variables Template for ForexFlow Backend

# Forex API Configuration
# Get your free API key from: https://www.alphavantage.co/support/#api-key
FOREX_API_KEY=demo
FOREX_API_BASE_URL=https://www.alphavantage.co/query

# Alternative: Fixer.io (uncomment to use)
# FOREX_API_KEY=your_fixer_key_here
# FOREX_API_BASE_URL=http://data.fixer.io/api

# Alternative: ExchangeRate-API (uncomment to use)
# FOREX_API_KEY=your_exchangerate_key_here
# FOREX_API_BASE_URL=https://v6.exchangerate-api.com/v6

# Application Settings
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache Settings
FOREX_CACHE_TTL_SECONDS=10
